{
  "name": "letopis",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "docker-compose up -d",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:local": "docker-compose up -d next start",
    "lint": "next lint",
    "db:pull": "dotenv -e .env.local -- npx prisma db pull --schema=./db/schema.prisma",
    "db:push": "dotenv -e .env.local -- npx prisma db push --schema=./db/schema.prisma",
    "db:migrate:dev": "dotenv -e .env.local -- npx prisma migrate dev --schema=./db/schema.prisma",
    "db:generate": "npx zenstack generate --schema db/zenstack/schema.zmodel prisma",
    "db:studio": "dotenv -e .env.local -- npx prisma studio --schema=./db/schema.prisma",
    "analyze": "ANALYZE=true next build",
    "lint:fix": "eslint --fix --ext .js,.jsx ."
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.1.0",
    "@emoji-mart/react": "^1.1.1",
    "@legendapp/state": "2.1.5",
    "@mantine/core": "7.5.3",
    "@mantine/dates": "7.5.3",
    "@mantine/form": "7.5.3",
    "@mantine/hooks": "7.5.3",
    "@mantine/modals": "7.5.3",
    "@mantine/tiptap": "7.5.3",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@next/bundle-analyzer": "^14.0.2",
    "@prisma/client": "5.5.2",
    "@tabler/icons-react": "2.40.0",
    "@tanstack/react-query": "5.8.1",
    "@tiptap/extension-link": "^2.2.4",
    "@tiptap/pm": "^2.2.4",
    "@tiptap/react": "^2.2.4",
    "@tiptap/starter-kit": "^2.2.4",
    "@zenstackhq/runtime": "1.2.1",
    "@zenstackhq/tanstack-query": "1.2.1",
    "next": "14.0.0",
    "next-auth": "^4.24.5",
    "react": "18",
    "react-dom": "18"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "1.0.0",
    "@types/emoji-mart": "^3.0.14",
    "@types/node": "20",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@zenstackhq/server": "1.2.1",
    "dotenv": "16.3.1",
    "eslint": "8",
    "eslint-config-next": "14.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "postcss": "8.4.31",
    "postcss-preset-mantine": "1.9.1",
    "postcss-simple-vars": "7.0.1",
    "prisma": "5.5.2",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "34.0.0",
    "stylelint-order": "6.0.3",
    "typescript": "5",
    "zenstack": "1.2.1"
  }
}
